<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <%- include('partials/header') %>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <link rel="shortcut icon" href="#" type="image/png">
        <style>
             /* Estilos básicos (ajuste conforme seu style.css) */
            .form-input { appearance: none; border-radius: 0.375rem; border-width: 1px; border-color: #D1D5DB; padding: 0.5rem 1rem; width: 100%; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); }
            .form-input:focus { outline: 2px solid transparent; outline-offset: 2px; box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow, 0 0 #0000); --tw-ring-color: rgba(220, 38, 38, 0.5); border-color: #DC2626; }
            .form-input.bg-gray-100 { background-color: #F3F4F6; cursor: not-allowed; }
            .btn-submit { display: inline-block; padding: 0.625rem 1.5rem; border-radius: 0.375rem; font-weight: 600; text-align: center; text-transform: uppercase; letter-spacing: 0.05em; font-size: 0.875rem; background-color: #DC2626; color: white; cursor: pointer; transition: background-color 0.2s; }
            .btn-submit:hover { background-color: #B91C1C; }
            .btn-submit:disabled { opacity: 0.5; cursor: not-allowed; }
        </style>
    </head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    
    <header class="bg-white shadow-md border-b-2 border-gray-100 sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-20">
            <a href="/"><img src="https://upload.wikimedia.org/wikipedia/commons/8/8c/SENAI_S%C3%A3o_Paulo_logo.png" alt="Logo SENAI" class="h-10"></a>
            <div class="flex items-center space-x-6">
                <a href="/dashboard" class="text-gray-600 hover:text-red-700 font-semibold transition-colors duration-200 text-sm uppercase tracking-wider">
                    Dashboard
                </a>
                <a href="/gerenciamento" class="text-gray-600 hover:text-red-700 font-semibold transition-colors duration-200 text-sm uppercase tracking-wider">
                    Gerenciamento
                 </a>
                <span class="text-red-700 font-semibold text-sm uppercase tracking-wider">Meu Perfil</span>
                <span class="text-gray-300">|</span>
                <span class="text-gray-700 hidden sm:inline">Bem-vindo, <strong class="text-red-700"><%= professorName %></strong>!</span>
                <a href="/logout" class="inline-block px-4 py-2 rounded-md font-semibold text-center uppercase tracking-wider text-xs transition-transform duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-red-700 text-white hover:bg-red-800 focus:ring-red-500">
                    Sair
                </a>
            </div>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow w-full">
        <div class="max-w-2xl mx-auto space-y-8">
            
            <div class="bg-white rounded-lg shadow-lg p-8 border-t-4 border-red-700">
                <h1 class="text-2xl font-bold text-gray-900 mb-6">Meu Perfil</h1>

                <% if (typeof success !== 'undefined' && success && success === 'true') { %>
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-r-lg" role="alert">
                        <p class="font-bold">Sucesso!</p>
                        <p>As suas informações foram atualizadas.</p>
                    </div>
                <% } %>
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-r-lg" role="alert">
                        <p class="font-bold">Erro!</p>
                        <p><%= error %></p>
                    </div>
                 <% } %>
                
                <form action="/perfil" method="POST" class="space-y-6">
                    <div>
                        <label for="fullName" class="block text-sm font-medium text-gray-700">Nome Completo</label>
                        <input type="text" id="fullName" name="fullName" value="<%= user.full_name %>" required class="mt-1 form-input">
                    </div>
                     <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email (não pode ser alterado)</label>
                        <input type="email" id="email" name="email" value="<%= user.email %>" class="mt-1 form-input bg-gray-100 text-gray-500" disabled readonly>
                    </div>
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700">Nome de Utilizador (não pode ser alterado)</label>
                        <input type="text" id="username" name="username" value="<%= user.username %>" class="mt-1 form-input bg-gray-100 text-gray-500" disabled readonly>
                    </div>
                    <div class="flex justify-end pt-2">
                        <button type="submit" class="btn-submit">
                            Salvar Alterações no Nome
                        </button>
                    </div>
                </form>
            </div>

            <section class="bg-white rounded-lg shadow-lg p-8 border-t-4 border-yellow-500">
                <h2 class="text-xl font-bold text-gray-900 mb-6">Alterar Senha</h2>

                <div id="changePasswordMessage" class="hidden p-4 rounded-md text-sm mb-6"></div>

                <form id="changePasswordForm" class="space-y-6">
                    <div>
                        <label for="currentPassword" class="block text-sm font-medium text-gray-700">Senha Atual</label>
                        <div class="relative mt-1">
                            <input id="currentPassword" name="currentPassword" type="password" required
                                   autocomplete="current-password"
                                   class="form-input pr-10"
                                   placeholder="Digite sua senha atual">
                            <span class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-gray-400 hover:text-gray-600 toggle-password-visibility">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                    </div>
                    <div>
                        <label for="newPassword" class="block text-sm font-medium text-gray-700">Nova Senha</label>
                         <div class="relative mt-1">
                            <input id="newPassword" name="newPassword" type="password" required minlength="6"
                                   autocomplete="new-password"
                                   class="form-input pr-10"
                                   placeholder="Mínimo 6 caracteres">
                            <span class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-gray-400 hover:text-gray-600 toggle-password-visibility">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        <p class="text-xs text-gray-500 mt-1">Recomendado: Use maiúsculas, minúsculas, números e símbolos.</p>
                    </div>
                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirmar Nova Senha</label>
                         <div class="relative mt-1">
                            <input id="confirmPassword" name="confirmPassword" type="password" required minlength="6"
                                   autocomplete="new-password"
                                   class="form-input pr-10"
                                   placeholder="Digite a nova senha novamente">
                            <span class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-gray-400 hover:text-gray-600 toggle-password-visibility">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                    </div>

                    <div class="pt-2 flex justify-end">
                        <button type="submit" class="btn-submit">
                            Alterar Senha
                        </button>
                    </div>
                </form>
            </section>
            </div>
    </main>

    <footer class="bg-red-800 text-white mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 text-center">
            <p class="text-sm">&copy; <%= new Date().getFullYear() %> SENAI - Todos os direitos reservados.</p>
        </div>
    </footer>

    <%- include('partials/modals') %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            console.log("Perfil JS local carregado.");

            const changePasswordForm = document.getElementById('changePasswordForm');
            const messageDiv = document.getElementById('changePasswordMessage'); // ID Corrigido

            // --- LÓGICA DO FORMULÁRIO DE MUDANÇA DE SENHA ---
            if (changePasswordForm && messageDiv) {
                changePasswordForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    messageDiv.textContent = '';
                    messageDiv.className = 'hidden p-4 rounded-md text-sm mt-4'; // Reset classes

                    const formData = new FormData(changePasswordForm);
                    const data = Object.fromEntries(formData.entries());

                    // Validação Frontend
                    if (data.newPassword !== data.confirmPassword) {
                        showFeedback('A nova senha e a confirmação não coincidem.', 'error');
                        return;
                    }
                    if (!data.newPassword || data.newPassword.length < 6) {
                         showFeedback('A nova senha deve ter pelo menos 6 caracteres.', 'error');
                         return;
                    }
                     if (!data.currentPassword) {
                         showFeedback('A senha atual é obrigatória.', 'error');
                         return;
                     }

                    const submitButton = changePasswordForm.querySelector('button[type="submit"]');
                    const originalButtonText = submitButton.textContent;
                    submitButton.disabled = true;
                    submitButton.textContent = 'Alterando...';

                    try {
                        // Chama a API do backend local
                        const response = await fetch('/api/change-password', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                            credentials: 'include', // Envia o cookie de sessão
                            body: JSON.stringify({
                                currentPassword: data.currentPassword,
                                newPassword: data.newPassword,
                                confirmPassword: data.confirmPassword
                            })
                        });

                        const result = await response.json();

                        if (!response.ok) {
                            throw new Error(result.message || `Erro ${response.status}`);
                        }

                        // Sucesso!
                        showFeedback(result.message, 'success');
                        changePasswordForm.reset();
                        // Opcional: Usar SweetAlert para sucesso
                        // Swal.fire('Sucesso!', result.message, 'success');

                    } catch (error) {
                        console.error("Erro ao alterar senha:", error);
                        showFeedback(error.message || 'Não foi possível alterar a senha.', 'error');
                        // Opcional: Usar SweetAlert para erro
                        // Swal.fire('Erro!', error.message || 'Não foi possível alterar a senha.', 'error');
                    } finally {
                         if(submitButton){
                            submitButton.disabled = false;
                            submitButton.textContent = originalButtonText;
                         }
                    }
                });
            } // Fim if(changePasswordForm)

            // --- Função Auxiliar para Feedback ---
            function showFeedback(message, type) {
                 if (!messageDiv) return;
                 messageDiv.textContent = message;
                 if (type === 'success') {
                     messageDiv.className = 'bg-green-100 border border-green-200 text-green-700 p-4 rounded-md text-sm mb-6';
                 } else { // 'error' or default
                     messageDiv.className = 'bg-red-100 border border-red-200 text-red-700 p-4 rounded-md text-sm mb-6';
                 }
                 messageDiv.classList.remove('hidden');
            }

            // --- LÓGICA PARA ALTERNAR VISIBILIDADE DAS SENHAS ---
            document.querySelectorAll('.toggle-password-visibility').forEach(toggleIconSpan => {
                const iconElement = toggleIconSpan.querySelector('i');
                const passwordInput = toggleIconSpan.previousElementSibling;

                if (passwordInput && iconElement && (passwordInput.tagName === 'INPUT' && passwordInput.type === 'password')) {
                     toggleIconSpan.addEventListener('click', () => {
                        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                        passwordInput.setAttribute('type', type);
                        iconElement.className = `fas ${type === 'password' ? 'fa-eye' : 'fa-eye-slash'}`;
                     });
                } else {
                     console.warn("Input de senha não encontrado adjacente ao ícone de toggle:", toggleIconSpan);
                }
            });
            // --- FIM DA LÓGICA DE VISIBILIDADE ---

        }); // Fim do DOMContentLoaded
    </script>
</body>
</html>